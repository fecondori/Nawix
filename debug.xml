<?xml version='1.0' encoding='UTF-8'?>

<!DOCTYPE properties SYSTEM 'http://java.sun.com/dtd/properties.dtd'>

<properties>
    <!--
          byOperator filter will check if the Operator id is not 0 to mark a position as valid
          -->
    <entry key='outdatedPosition.byOperator'>true</entry>

    <!--
    byTimeDelta filter will mark as invalid any position whose server time delta with latest positions
    is too small compared to the device time delta, this will mark the first valid position as invalid
    because of the sequential sends by the device
    -->
    <entry key='outdatedPosition.byTimeDelta'>true</entry>

    <!-- Max time difference in seconds between the first cached event and the last cached event -->
    <entry key='outdatedPosition.cacheTimeLimit'>10</entry>

    <!-- Max difference between deviceTimeDelta and serverTimeDelta (network error tolerance related)-->
    <entry key='outdatedPosition.byTimeDelta.maxDelta'>5</entry>

    <!-- Max difference between deviceTimeDelta and serverTimeDelta (network error tolerance related)-->
    <entry key='outdatedPosition.byTimeDelta.minDelta'>1</entry>
    <entry key='config.default'>./setup/default.xml</entry>

    <entry key='web.path'>./traccar-web/web</entry>
    <entry key='web.debug'>true</entry>
    <entry key='web.console'>true</entry>

    <entry key='logger.console'>true</entry>

    <entry key='database.driver'>org.postgresql.Driver</entry>
    <entry key='database.url'>jdbc:postgresql://127.0.0.1:5432/traccar</entry>
    <entry key='database.user'>postgres</entry>
    <entry key='database.password'>admin</entry>

    <entry key='atrack.custom'>true</entry>
    <entry key='intellitrac.port'>6037</entry>

</properties>
